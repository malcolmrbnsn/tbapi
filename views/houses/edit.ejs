<% include ../partials/header %>
  <div class="ui container space">
    <% if(error && error.length > 0){ %>
      <div class="ui error message">
        <%= error %>
      </div>
      <% } %>
        <% if(success && success.length > 0){ %>
          <div class="ui success message">
            <%= success %>
          </div>
          <% } %>
          <div class="ui padded segment">
    <h1 class="ui center aligned header">Edit <%= house.name %></h1>
    <form class="ui form" action="/houses/<%= house._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="field">
        <label>House Name</label>
        <input type="text" placeholder="<%= house.name %>" name="house[name]">
      </div>
      <div class="field">
      <input type="file" (change)="fileEvent($event)" class="inputfile" id="embedpollfileinput" name="fileUploaded" />
      <label for="embedpollfileinput" class="ui floated button"><i class="ui upload icon"></i>Upload image</label>
      </div>
      <button class="ui submit button" type="submit">Submit</button>
    </form>
  </div>
  </div>
  <% include ../partials/footer %>
