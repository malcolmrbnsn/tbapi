<% include ./partials/header %>
  <div class="ui container space">
    <% if(error && error.length > 0){ %>
      <div class="ui error message">
        <%= error %>
      </div>
      <% } %>
        <% if(success && success.length > 0){ %>
          <div class="ui success message">
            <%= success %>
          </div>
          <% } %>
          <div class="ui padded segment">
            <h1 class="ui center aligned header">Register</h1>
            <form class="ui form" action="/register" method="POST">
              <div class="required field">
                <label>Username</label>
                <input type="text" name="username" placeholder="Username" required>
              </div>
              <div class="required field">
                <label>Password</label>
                <input type="password" name="password" placeholder="Password" required>
              </div>
              <div class="required field">
                <label>Signup Code</label>
                <input type="password" name="signupCode" placeholder="Signup Code" required>
              </div>
              <button class="ui submit button" type="submit">Submit</button>
            </form>
          </div>
            <% include ./partials/footer %>
