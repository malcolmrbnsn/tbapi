<% include ./partials/header %>
<div class="ui container space">
<% if(error && error.length > 0){ %>
	<div class="ui error message">
		<%= error %>
	</div>
	<% } %>
		<% if(success && success.length > 0){ %>
			<div class="ui success message">
				<%= success %>
			</div>
			<% } %>
			<div class="ui padded segment">
				<h1 class="ui center aligned header">Forgot Password</h1>
		<form action="/reset/<%= token %>" class="ui form" method="POST">
			<div class="required field">
			<label>New Password</label>
			<input type="password" name="password" value="" placeholder="New password" required>
		</div>
			<div class="required field">
			<label>Confirm Password</label>
			<input type="password" name="confirm" value="" placeholder="Confirm password" required>
		</div>
			<button class="ui submit button" type="submit">Update Password</button>
		</form>
	</div>
</div>
<% include ./partials/footer %>
